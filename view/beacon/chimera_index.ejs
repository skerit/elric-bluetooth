<% implement('layouts/chimera') %>
<% style('elric-chimera') %>

<% start('chimera-status') %>
<% end('chimera-status') %>

<% start('chimera-cage') %>
<x-panel class="beacons table-panel">
	<x-panel-body>
		<table class="table table-hover">
			<thead><tr>
				<th>Title</th>
				<th>Advertised Name</th>
				<th>Type</th>
				<th>Last seen</th>
				<th></th>
			</tr></thead>
			<tbody>
			<% for (i = 0; i < records.length; i++) {
				record = records[i];
				beacon = record.Beacon;
			%>
				<tr>
					<td><%= beacon.title %></td>
					<td><%= beacon.name %></td>
					<td><%= beacon.address %></td>
					<td><%= beacon.last_seen.format('Y-m-d H:i:s') %></td>
					<td>
						<% Router.printRoute('chimera@IdActionLink', {
							controller: 'Beacon',
							action: 'train',
							id: beacon._id
						}, {
							className: 'btn btn-success beacon-train-button',
							title: 'Train',
							content: '<i>' + Media.svg('gears') + '</i>Train'
						}) %>
					</td>
				</tr>
			<% } %>
			</tbody>
		</table>
	</x-panel-body>
</x-panel>
<% end('chimera-cage') %>